{{#if products.length}}
   <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {{#each products}}
              <div class="col">
          <div class="card shadow-sm">
            <img src={{image}} alt={{title}}>

            <div class="card-body">
              <p class="card-text fw-bold">{{title}}</p>
              {{!-- <p class="card-text">{{description}}</p> --}}
              <div class="d-flex justify-content-between align-items-center">
                <small class="text-dark fw-bold text-capitalize">{{user.firstName}}</small>

                <small class="text-dark">{{FormData createdAt}}</small>
                <small class="text-muted">{{price}}.00$</small>
              </div>
            </div>
              <div class="card-footer">
                <div class="btn-group btn-group-sm gap-3" role="group" aria-label="Basic outlined example">
                 <button type="button" class="btn btn-outline-primary">Detail</button>
                {{#if @root.token}}
                {{#ifequal user @root.userId}}

                 <button type="button" class="btn btn-outline-secondary">Edit</button>
                 <button type="button" class="btn btn-outline-danger">Delete</button>
                {{/ifequal}}
                {{/if}}
                 </div>
              </div>
          </div>
        </div>
        {{/each}}

      

   </div>
{{else}}
    <p> no products</p>
{{/if}}
